{
  "include": ["src/**/*", "src/**/*.json", "tests"],
  "compilerOptions": {
    "composite": true,
    "target": "ES2017",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@": ["./"],
      "*": ["src/*", "node_modules/*"],
      "@huma-finance/shared": ["../huma-shared/src"]
    },
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../huma-shared"
    }
  ]
}
