{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "paths": {
      "@huma-finance/shared": ["../huma-shared/src"]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ES2017"
  },
  "include": ["src/**/*", "src/**/*.json", "./*.ts", "./*.d.ts"],
  "references": [
    {
      "path": "../huma-shared"
    }
  ]
}
