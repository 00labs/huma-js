{
  "name": "huma-js",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "lerna:publish": "yarn lerna publish patch --no-private",
    "lerna:publish:canary": "yarn lerna publish patch --preid beta --canary --no-private",
    "start:widget": "yarn workspace @huma-finance/widgets cosmos",
    "build:all": "yarn build:core && yarn build:web-core && yarn build:sdk && yarn build:widget",
    "build:widget": "yarn workspace @huma-finance/widgets build",
    "build:web-core": "yarn workspace @huma-finance/web-core build",
    "build:core": "yarn workspace @huma-finance/core build",
    "build:sdk": "yarn workspace @huma-finance/sdk build",
    "prettier:sdk": "yarn workspace @huma-finance/sdk prettier",
    "prettier:core": "yarn workspace @huma-finance/core prettier",
    "prettier:web-core": "yarn workspace @huma-finance/web-core prettier",
    "prettier:widget": "yarn workspace @huma-finance/widgets prettier",
    "prettier:all": "yarn prettier:widget && yarn prettier:core && yarn prettier:web-core && yarn prettier:sdk",
    "docs:all": "yarn docs:sdk && yarn docs:widget",
    "docs:sdk": "yarn workspace @huma-finance/sdk generateDocs",
    "docs:widget": "yarn workspace @huma-finance/widgets generateDocs",
    "test:all": "yarn test:core && yarn test:web-core && yarn test:sdk",
    "test:sdk": "yarn workspace @huma-finance/sdk test",
    "test:core": "yarn workspace @huma-finance/core test",
    "test:web-core": "yarn workspace @huma-finance/web-core test",
    "test:badges:sdk": "yarn workspace @huma-finance/sdk test:badges",
    "lint:all": "yarn lint:core && yarn lint:web-core && yarn lint:sdk && yarn lint:widget",
    "lint:sdk": "yarn workspace @huma-finance/sdk lint",
    "lint:core": "yarn workspace @huma-finance/core lint",
    "lint:web-core": "yarn workspace @huma-finance/web-core lint",
    "lint:widget": "yarn workspace @huma-finance/widgets lint",
    "prepare": "husky install",
    "postCommit": "bash .husky/post-commit"
  },
  "devDependencies": {
    "lerna": "^6.6.1"
  }
}
